<div class="razor">
    <h1>Razor</h1>
    <h2>Information</h2>
    <h3><strong>Datum/klockslag:</strong> @DateTime.Now</h3>
    @{ 
        var currentDay = DateTime.Now.DayOfWeek.ToString();
    }
    <p>Idag är det @(currentDay == "Monday" ? "måndag." : "inte måndag.")</p>

    <h2>Kurser jag läst:</h2>
    <ul>
        @foreach (var course in arrayOfCourses)
        {
            <li>@course.code, @course.name</li>
        }
    </ul>
</div>