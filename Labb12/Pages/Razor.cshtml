@model ContactModel
@{
    ViewData["Title"] = "Razor";

    var arrayOfCourses = new[] {
        new { code = "DT057G", name = "Webbutveckling I" },
        new { code = "DT084G", name = "Introduktion till programmering med JavaScript" },
        new { code = "DT163G", name = "Digital bildbehandling för webb" },
        new { code = "GD008G", name = "Typografi och form för webb" },
        new { code = "DT003G", name = "Databaser" },
        new { code = "DT093G", name = "Webbutveckling II" },
        new { code = "DT068G", name = "Webbanvändbarhet" },
        new { code = "DT152G", name = "Webbdesign för CMS" },
        new { code = "DT173G", name = "Webbutveckling III" },
